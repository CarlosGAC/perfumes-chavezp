<%= form_with(model: order, url: order_datum_order_path, local: true) do |form| %>

  <div class="form-container">
    <ul>
      <li><%= form.label :perfume_name, "Nombre del perfume" %></li>
      <li><%= form.text_field :perfume_name, id: :perfume_name, data: { autocomplete: autocomplete_perfume_name_order_datum_orders_path } %></li>
    </ul>

    <ul>
      <li><%= form.label :amount, "Cantidad" %></li>
      <li><%= form.number_field :amount, id: :order_amount %></li>
    </ul>

    <ul>
      <li><%= form.label :status, "Estado" %></li>
      <li><%= form.select :status, Order.statuses.keys %></li>
    </ul>

    <ul>
      <li class="li-submit"><%= form.submit "Agregar"%></li>
    </ul>

  </div>
<% end %>
