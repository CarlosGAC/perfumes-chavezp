<%= form_with(model: order_datum, local: true) do |form| %>
  <div class="form-container">
    <ul>
      <li><%= form.label :order_date, "Fecha del pedido" %></li>
      <li><%= form.date_select :order_date, id: :order_datum_order_date %></li>
    </ul>

    <ul>
      <li><%= form.label :client_name, "Cliente" %></li>
      <li><%= form.text_field :client_name, id: :order_datum_client_id, data: { autocomplete: autocomplete_client_name_order_data_path } %></li>
    </ul>

    <ul>
      <li class="li-submit"><%= form.submit "Agregar"%></li>
    </ul>
  </div>
<% end %>
