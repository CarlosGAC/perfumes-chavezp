  font-size 1em;

p
  font-size 2em;

.title
  display: flex;
  
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap:wrap;
  
  margin: 0 0 10px 5px;

.title h2
  margin-right: 100px;

.title a
  text-align: center;
  vertical-align: baseline;
