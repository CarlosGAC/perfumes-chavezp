// about new and forms
.new-container, .login-container, .backup-container
  display: flex;
  //align-items: center;
  flex-direction: column;

.backup-container li
  margin-bottom: 10px;

.form-container
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;

.form-container ul
  &:last-child
    height: 45px;

.li-submit
  height: 37px;

.li-submit input[type="submit"]
  font-weight: 600;

// orders
.pedidos-container
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;

  margin: 5px 0;
  width: 100%;

.pedidos
  display: flex;
  flex-direction: column;

.pedidos ul
  display: flex;
  flex-direction: row;
  justify-content: flex-start;

  padding-left: 0;

.pedidos li
  margin-right: 10px;

// Clients & Cuentas
.clientes-container, .cuentas-container, .pedidos-d-container,.pedidos-container, .schedules-container
  display: flex;
