.clientes-container ul, .cuentas-container ul, .pedidos-d-container ul, .pedidos-container ul, .schedules-container ul, .cobros-container ul
  display: flex;
  flex-direction: row;
  justify-content: flex-start;

  padding-left: 0;

.clientes-container li, .cuentas-container li, .pedidos-d-container li, .pedidos-container li, .schedules-container li, .cobros-container li
