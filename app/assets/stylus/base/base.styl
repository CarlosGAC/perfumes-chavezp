#notice
  margin: 25px auto;

#header
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;

  background-color: $base_black;
  width: 100%;
  min-height:100px;

.global-logo
  //background-color: Khaki;
  height: 60px;
  min-width: 100px;
  margin: 20px 25px 20px 5%;

.global-logo img
  height: 60px;

.global-logo a
  background-color: #00000000;

.menu
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;

  margin: auto 25px;
  width: 90%;

.menu a
  background-color: $base_black;
  border-radius: 4px;
  color: $base_gray;
  font-size 1.2em;
  font-weight: 400;
  text-decoration: none;
  margin: 5px 25px;
  -webkit-transition: all 0.6s ease; // 0.8s
  &:hover
    color: $base_black;
    background-color: $base_yellow;

  //min-width: 190px;

.contenedor
  display: flex;
  flex-direction: column;

  width: 100%;

// Index

.index-container
  display: flex;
  justify-content: flex-start;

  background-image: url(i-bg3.jpg);
  background-size: cover; // contain
  background-repeat: no-repeat;
  width: 100%;
  height: 100vh;

.info
  margin: 50px auto 0 5%;
  //width: 40%;

.text-area
  background-color: $base_white;
  box-shadow: 2px 2px 10px $base_black;
  padding: 25px 20px;
  max-width: 490px;

.global-container
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  margin: 0 5%;
  width: 90%;

