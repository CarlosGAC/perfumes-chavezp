// show
.show-container
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;

  font-size: 1.5em;

.show-container ul
  padding-left: 0;
  margin-right: 100px;
  min-width: 210px;

.show-links
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  margin-bottom: 50px;

.stay-back
  justify-content: flex-start;

.get-down
  margin-top: 50px;
  

.show-links a
  margin: 0 10px;

.get_down
  margin-top: 50px;


// autocompletado
// #ui-id-1, #ui-id-2
.ui-menu
  color: $base_black;
  background-color: $base_white;
  border: 1px solid;
  width: 125px;
  padding-left: 0px;

.ui-menu-item
  //border-bottom: 1px solid;
  transition: all 0.5s ease;
  &:hover
    color: $base_gray;
    background-color: $base_black;
  &:first-child
    font-weight: normal;

.ui-helper-hidden-accessible
  display: none
  color: tomato;
  margin-left: 50px;
  
// Cajas de instrucciones  
.instruction-box
  background-color: $base_gray;
  border: 1px solid $base_black;
  position: fixed;
  bottom: 0;
  right: 0;
  //min-height: 300px;
  min-width: 50px;
  width: 298px;
  max-width: 300px;
  -webkit-transition: all 0.7s ease;


.instruction-box p
  font-size: 1em;
  margin: 10px 0;
  padding: 0 10px;
  
.ib-title
  display: flex;
  align-items: center;
  
  
  color: $base_gray;
  background-color: $base_black;
  height: 50px;
  width: 100%
  
.ib-title p
  font-size: 1em;
  font-weight: 600;
  margin: 0;
  padding: 10px;
  
.ib-text
  display: none; //block
  width: 100%;
  -webkit-transition: all 0.7s ease;
  
  
// Checa esto
@media only screen and (min-width: 900px)
  body
    min-width: 900px; //600

// Para resoluciones moviles
@media only screen and (max-width: 600px) 
  *
    font-size: 18px;
  #header
    position: fixed;
  .contenedor
    padding-top: 240px;
  .table-ul-2 ul
    min-height: 70px;  
  .table-ul-1 li, .table-ul-2 li
    min-width: 120px;
    display: flex;
    flex-wrap: wrap;
  .prod-margin
    height: 240px;
    width: 200px;
  
